<div class="profile-banner">
<div class="row">
  <div class="col s6 m6">
    <img src="http://cps-static.rovicorp.com/3/JPG_500/MI0000/049/MI0000049473.jpg?partner=allrovi.com" class="avatar-profile">
  </div>
  <div class="col s6 m6" align="right">
    <strong>
      <h5><%= current_user.user_name %></h5>
      <%= link_to "Orders", orders_path, method: :get %>
      <h6>
        <span class='user-like-count'>
          <%= current_user.liked_items.count %>
        </span>
        <br/>likes
      </h6>
    </strong>
  </div>
  </div>
</div>

<% current_user.liked_items.each do |item| %>
<div class='profil item' data-item='<%= item.id %>'>
  <%= item.tumbnail_img %><br/>
  <%= item.name %><br/>
  <%= item.price %> $<br/>
  <%= item.description %><br/>
  <%= item.gender %><br/>
  <%= item.brand.name %><br/>
  <%= item.colors.map(&:name).join(', ') %><br/>
  <% item_like = current_user.item_likes.find{ |item_like| item_like if item_like.item_id == item.id} %>
  <%= item.item_likes.count %> likes<br/>
  <%= link_to 'unlike', item_item_like_path(item.id, item_like), remote: true, method: :delete %><br/>
  <%= link_to new_order_path(item_id: item.id), method: :get do %>
  <div class="btn btn-primary">Order</div>
  <br/>
  <% end %>
</div>
<% end %>

